<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_header"
        app:icon="@drawable/ic_baseline_notifications_active_24">

        <ListPreference
            app:defaultValue="@string/notificationValue"
            app:entries="@array/notifications_entries"
            app:entryValues="@array/notifications_values"
            app:key="@string/notification"
            app:title="@string/notification_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/lastcalls_header"
        app:icon="@drawable/ic_baseline_access_time_filled_24">

        <ListPreference
            app:defaultValue="@string/NoFilter"
            app:entries="@array/lastcalls_entries"
            app:entryValues="@array/lastcalls_values"
            app:key="@string/lastcalls"
            app:title="@string/lastcalls_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/display_rating"
        app:icon="@drawable/ic_baseline_star_24">

        <ListPreference
            app:defaultValue="@string/number"
            app:entries="@array/display_rating_entries"
            app:entryValues="@array/display_rating_values"
            app:key="@string/display_rating"
            app:title="@string/display_rating_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>v

</PreferenceScreen>